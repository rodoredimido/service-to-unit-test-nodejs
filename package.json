{
  "name": "service-test",
  "version": "1.0.0",
  "description": "Service for unit tests",
  "main": "index.js",
  "config": {
    "version": "**",
    "folder": "**",
    "file": "*@(.spec.js)"
  },
  "scripts": {
    "start": "nodemon server/index.js",
    "test": "cross-env NODE_ENV=test; mocha --require test/helpers \"@(src|test)/**/*@(.spec.js)\" --timeout 5000 --exit",
    "cover": "nyc npm test",
    "lint": "eslint --fix --ext .json,.js,.spec.js src test server"
  },
  "author": "Rodolfo Garcia",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "bristol": "^0.4.0",
    "cross-env": "^7.0.2",
    "koa": "^2.11.0",
    "koa-async-validator": "^0.4.1",
    "koa-body": "^4.1.1",
    "koa-bodyparser": "^4.3.0",
    "koa-convert": "^1.2.0",
    "koa-jwt": "^3.6.0",
    "koa-router": "^8.0.8",
    "lodash": "^4.17.15",
    "lodash.clonedeep": "^4.5.0",
    "moment": "^2.24.0",
    "node-fetch": "^2.6.0",
    "palin": "^2.3.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.5"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^7.1.1",
    "nock": "^12.0.3",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "supertest": "^4.0.2"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": true,
    "cached": false,
    "reporter": [
      "text",
      "lcov",
      "cobertura"
    ],
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*"
    ]
  }
}
